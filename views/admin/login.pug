doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		meta(name="description" content="New Engand Clemson Club")
		meta(name="author" content="Mike DeHart")
		title NECC Login

		// Favicon
		link(rel="icon" href="img/favicon.ico")

		// Bootstrap CSS
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

		// Custom CSS
		link(href="css/base.css" rel="stylesheet" type="text/css")

		// Login page CSS
		link(href="css/signin.css" rel="stylesheet" type="text/css")

	body(class="text-center")
		form(class="form-signin" method="post" action="/authorize")
			img(class="mb-4" src="img/tiger.png" width="100" height="100" alt="NECC Login")
			h1(class="h3 mb-3 font-weight-normal") Please sign in
			label(class="sr-only" for="inputUser") Username
			input(type="user" id="inputUser" name="username" class="form-control" placeholder="Username" required autofocus)
			label(class="sr-only" for="inputPassword") Password
			input(type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required)
			button(class="btn btn-lg btn-clemson btn-block" type="submit") Sign in



