doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		meta(name="description" content="NECC Console")
		meta(name="author" content="Mike DeHart")
		title NECC Console

		// Favicon
		link(rel="icon" href="img/favicon.ico")

		// Bootstrap CSS
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

		// Custom CSS
		link(href="css/base.css" rel="stylesheet" type="text/css")

	body
		main(role="main" class="container")
			div(class="row")
				div(class="col-md-12 col-sm-12")
					h1(class="display-3 text-center") NECC Console

			div(class="row")
				div(class="col-md-6 form-div")
					h2(class="display-4 text-center mb-3") Gallery Upload
					form(method="post" action="/gallery" novalidate enctype="multipart/form-data")
						div(class="form-group")
							label(for="gTitle") Title
							input(type="text" name="gTitle" class="form-control" id="titleInput" aria-describedby="titleHelp" placeholder="Title")
							small(class="form-text text-muted" id="titleHelp") Title of gallery page.
						div(class="form-row")
							div(class="form-group col-md-6")
								label(for="gMonth") Month
								select(class="form-control" name="gMonth" id="gMonth")
									option(selected) Jan
									option Feb
									option Mar
									option Apr
									option May
									option Jun
									option Jul
									option Aug
									option Sept
									option Oct
									option Nov
									option Dec
							div(class="form-group col-md-6")
								label(for="gYear") Year
								input(type="text" name="gYear" class="form-control" id="gYear" placeholder="2018")
						div(class="form-group")
							label(for="gDir") Directory Name
							input(type="text" name="gDir" class="form-control" id="gDir" placeholder="no spaces!")
						div(class="form-group")
							label(for="gTxt") Description
							textarea(class="form-control" name="gTxt" id="txtInput" aria-describedby="txtHelp")
							small(class="form-text text-muted" id="txtHelp") Text description for the gallery.
						div(class="form-group")
							label(for="gFile") Zip File
							input(type="file" class="form-control-file" name="gFile" id="fileInput")
						div(class="form-group")
							button(class="btn btn-clemson btn-block" type="submit") Submit

				div(class="col-md-6 form-div")
					h2(class="display-4 text-center") Get members
					p(class="lead") Export list of members signed up from the site. List is in CSV format.
					button(class="btn btn-clemson btn-block" type="button") Export
				

